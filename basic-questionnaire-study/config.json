{
  "$schema": "https://raw.githubusercontent.com/revisit-studies/study/main/src/parser/StudyConfigSchema.json",
  "studyMetadata": {
    "title": "Basic Questionnaire Study",
    "version": "pilot",
    "authors": ["The reVISit Team"],
    "date": "2024-03-19",
    "description": "A simple questionnaire study",
    "organizations": ["University of Utah", "WPI", "University of Toronto"]
  },
  "uiConfig": {
    "contactEmail": "contact@revisit.dev",
    "helpTextPath": "basic-questionnaire-study/assets/help.md",
    "logoPath": "revisitAssets/revisitLogoSquare.svg",
    "withProgressBar": true,
    "autoDownloadStudy": false,
    "withSidebar": true
  },
  "baseComponents": {
    "bar-chart": {
      "type": "website",
      "response": [
        {
          "id": "barChart",
          "prompt": "Your selected answer:",
          "required": true,
          "location": "belowStimulus",
          "type": "reactive"
        }
      ],
      "path": "basic-questionnaire-study/assets/bar-chart.html",
      "instructionLocation": "aboveStimulus"
    },
    "line-chart": {
      "type": "website",
      "response": [
        {
          "id": "lineChart",
          "prompt": "Value of the point you selected:",
          "required": true,
          "location": "belowStimulus",
          "type": "reactive"
        }
      ],
      "path": "basic-questionnaire-study/assets/line-chart.html",
      "instructionLocation": "aboveStimulus"
    }
  },
  "components": {
    "introduction": {
      "type": "markdown",
      "path": "basic-questionnaire-study/assets/introduction.md",
      "response": []
    },
    "first-question-set": {
      "type": "questionnaire",
      "response": [
        {
          "id": "q1-name",
          "prompt": "What is your first name?",
          "required": true,
          "location": "aboveStimulus",
          "type": "longText",
          "placeholder": "Please enter your first name"
        },
        {
          "id": "q2-color",
          "prompt": "What is your favorite color?",
          "required": false,
          "location": "aboveStimulus",
          "type": "dropdown",
          "placeholder": "Please choose your favorite color",
          "options": ["Red", "Blue", "My favorite color is not shown here."]
        }
      ]
    },
    "second-question-set": {
      "type": "questionnaire",
      "response": [
        {
          "id": "q3-satisfaction",
          "prompt": "Rate your satisfaction with this survey from 1 (not enjoyable) to 5 (very enjoyable).",
          "required": false,
          "location": "aboveStimulus",
          "type": "likert",
          "leftLabel": "Not Enjoyable",
          "rightLabel": "Very Enjoyable",
          "numItems": 5
        }
      ]
    },
    "bar-chart-1": {
      "baseComponent": "bar-chart",
      "description": "A trial for the user to click the largest bar",
      "instruction": "Click on the largest bar",
      "parameters": {
        "barData": [0.32, 0.01, 1.2, 1.3, 0.82, 0.4, 0.3]
      }
    },
    "bar-chart-2": {
      "baseComponent": "bar-chart",
      "description": "A trial for the user to click the smallest bar",
      "instruction": "Click on the smallest bar",
      "parameters": {
        "barData": [1.2, 1.2, 1.2, 1.3, 0.82, 0.4, 0.3]
      }
    },
    "line-chart-1": {
      "baseComponent": "line-chart",
      "description": "Click the highest point on the line",
      "instruction": "Click the highest point",
      "parameters": {
        "lineData": [2, 5, 3, 8, 6, 4],
        "labels": ["A", "B", "C", "D", "E", "F"]
      }
    }
  },
  "sequence": {
    "order": "fixed",
    "components": [
      "introduction",
      "first-question-set",
      "second-question-set",
      "bar-chart-1",
      "bar-chart-2",
      "line-chart-1"
    ]
  }
}
